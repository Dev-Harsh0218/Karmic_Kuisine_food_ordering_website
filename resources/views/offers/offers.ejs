<div id="menu-head">
    <div id="menu-head-text">
        <h1>ready for some quick trades</h1>
    </div>
    <img src="img/back7.jpg" alt="">
</div>


<div class="container">
    <div class="swap-box">
        <h2 class="text-center mb-4">Crypto Exchange Swap</h2>
        
        <div class="form-group">
            <label for="fromCurrency">From Currency:</label>
            <select class="form-control" id="fromCurrency">
                <option value="btc">Bitcoin (BTC)</option>
                <option value="eth">Ethereum (ETH)</option>
                <!-- Add more options as needed -->
            </select>
        </div>

        <div class="form-group">
            <label for="fromAmount">Amount:</label>
            <input type="number" class="form-control" id="fromAmount" placeholder="Enter amount">
        </div>

        <div class="form-group">
            <label for="toCurrency">To Currency:</label>
            <select class="form-control" id="toCrypto">
                <option value="eur">Ethereum (ETH)</option>
                <option value="usd">Bitcoin (BTC)</option> 
            </select>
        </div>

        <div class="form-group">
            <label for="toAmount">Amount:</label>
            <input type="text" class="form-control" id="toAmount" readonly>
        </div>

        <button type="button" class="btn btn-primary btn-block" onclick="performSwap()">Swap</button>
    </div>
</div>